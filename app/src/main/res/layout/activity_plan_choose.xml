<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Escolha um plano: "
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:background="@drawable/linearlayout_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/title_plan_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plano 1: "
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/description_plan_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assista séries e filmes de forma ilimitada no seu computador, smartphone ou tablet com "
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/price_plan_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por apenas "
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_plan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experimentar!"
            android:background="#1976d2"
            android:textColor="#FFFAFA"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"/>




    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        >


        <TextView
            android:id="@+id/title_plan_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plano 2: "
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/description_plan_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Assista séries e filmes de forma ilimitada no seu computador, smartphone ou tablet com "
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20dp" />





        <TextView
            android:id="@+id/price_plan_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por apenas "
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_plan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#1976d2"
            android:text="Experimentar!"
            android:textColor="#FFFAFA" />

    </LinearLayout>
</LinearLayout>
</ScrollView>