<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="correia.felipe.exo_app.Activity_menu_principal"
    tools:showIn="@layout/app_bar_principal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_news"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novidades!"
            android:id="@+id/textView7" />
    <android.support.v17.leanback.widget.HorizontalGridView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/gridView"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_1"
        app:layout_constraintTop_toBottomOf="@+id/category_news"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultos"
            android:id="@+id/textView6" />
    <android.support.v17.leanback.widget.HorizontalGridView
        android:id="@+id/gridView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_2"
        app:layout_constraintTop_toBottomOf="@+id/category_1"
        >
        <TextView
            android:id="@+id/txt_category_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"/>

    <android.support.v17.leanback.widget.HorizontalGridView
        android:id="@+id/gridView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_category_3"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/txt_category_3"
        android:layout_alignParentStart="true" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
</ScrollView>